# Set default behavior to automatically normalize line endings to LF
* text=auto eol=lf

# Explicitly declare source files to normalize line endings
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.less text eol=lf
*.html text eol=lf
*.xml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Shell scripts should use LF
*.sh text eol=lf
*.bash text eol=lf

# Windows batch files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files - don't normalize
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.webp binary
*.mp3 binary
*.mp4 binary
*.webm binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Git attributes
.gitattributes text eol=lf
.gitignore text eol=lf

# Config files
.eslintrc.* text eol=lf
.prettierrc text eol=lf
tailwind.config.js text eol=lf
vite.config.js text eol=lf
tsconfig.json text eol=lf
package.json text eol=lf
package-lock.json text eol=lf
